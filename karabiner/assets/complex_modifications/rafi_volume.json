{
  "title": "Rafi Volume Control",
  "rules": [
    {
      "description": "Cmd+Up/Down to increase/decrease volume.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": { "mandatory": [ "command" ] }
          },
          "to": [ { "key_code": "volume_decrement" } ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": { "mandatory": [ "command" ]
            }
          },
          "to": [ { "key_code": "volume_increment" } ]
        }
      ]
    }
  ]
}
