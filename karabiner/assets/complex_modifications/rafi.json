{
  "title": "Rafi's CapsLock Chord (Escape/LShift)",
  "maintainers": ["Rafi"],
  "homepage": "https://github.com/rafi/.config",
  "rules": [
    {
      "description": "Caps_Lock => Escape (Alone) or Left_Shift (With other keys).",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "left_shift" }],
          "to_if_alone": [{ "key_code": "escape" }]
        }
      ]
    }
  ]
}
